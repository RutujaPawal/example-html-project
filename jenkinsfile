pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'rutujapawalhtml/example-html-project'
        DOCKER_BIN = '/usr/bin/docker' // Update this with the path to your docker binary
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/RutujaPawal/example-html-project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def customImage = sh(script: "${env.DOCKER_BIN} build -t ${DOCKER_IMAGE} .", returnStdout: true).trim()
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh "${env.DOCKER_BIN} run -d -p 8000:80 --name html-container ${DOCKER_IMAGE}"
                }
            }
        }
    }
}
